.main-menu
  ._wrapper
    a._logo
      picture
        source(media="(min-width: 1440px)", width="200px", height="50px", srcset="img/logo-footer-desktop.svg")
        source(media="(min-width: 768px)", width="166px", height="42px", srcset="img/logo-footer-tablet.svg")
        img(src="img/footer-logo-mobile.svg", width="96px", height="15px", alt="Логотип сайта путешествий 'Погнали?'.")
    button._toggle(type="button")
      span.visually-hidden Закрыть меню.
    a._auth Авторизация
  ul._navigation
    each link in navLinks
      if link.href === location
        li._navigation-item.-active
          a._link=link.text
      else
        li._navigation-item
          a._link(href=link.href)=link.text
  ul._user
    li._user-item
      a._link.-login Авторизация
    li._user-item
      a._link.-phone(href="tel:88005558628") 8 800 555-86-28
    li._user-item
      a._link.-mail(href="mailto:mail@htmlacademy.ru") mail@htmlacademy.ru
  ul.social._list
    li._item
      a._link.-fb(href="https://www.facebook.com/htmlacademy", aria-label="Фейсбук.")
    li._item
      a._link.-vk(href="https://vk.com/htmlacademy", aria-label="ВКонтакте.")
    li._item
      a._link.-inst(href="https://www.instagram.com/htmlacademy/", aria-label="Инстаграм.")
