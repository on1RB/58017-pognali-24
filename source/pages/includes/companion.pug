section.companion
  h2._title Подберите <br> идеального <br> попутчика
  button._hobby(type="button") Хобби
  button._music(type="button") Музыка
  ul.music-list
    li._item
      label.control
        input._input.visually-hidden(type="checkbox" name="hard-rock" checked)
        span._mark
        span._label Тяжелый рок
    li._item
      label.control
        input._input.visually-hidden(type="checkbox" name="russian-rap" checked)
        span._mark
        span._label Русский рэп
    li._item
      label.control
        input._input.visually-hidden(type="checkbox" name="eurodance")
        span._mark
        span._label Евроденс
  button._food(type="button") Еда
  button._transport(type="button") Транспорт
  ul.transport-list
    li._item
      label._control.visually-hidden Попутчик согласен на авиаперевозки.
        input(type="checkbox" name="plane" checked)
        span._mark
    li._item
      label._control.visually-hidden Попутчик не согласен на автобусные путешествия.
        input(type="checkbox" name="plane" checked)
        span._mark
    li._item
      label._control.visually-hidden Попутчик любит кататься на велосипеде.
        input(type="checkbox" name="plane")
        span._mark
    li._item
      label._control.visually-hidden Попутчик любит пешие прогулки.
        input(type="checkbox" name="plane" checked)
        span._mark
  fieldset(aria-expanded="true")
    legend._level Левел
    .range-wrapper
      label._label
        span.visually-hidden#range-min Минимальный
        input._input(type="number" name="min-level" value=RANGE_SLIDER.valueA min=RANGE_SLIDER.min, max=RANGE_SLIDER.max)
      label._label
        span.visually-hidden#range-max Максимальный
        input._input(type="number" name="max-level" value=RANGE_SLIDER.valueB min=RANGE_SLIDER.min, max=RANGE_SLIDER.max)
    .range
      input.cost__input(type="range", value=RANGE_SLIDER.valueA min=RANGE_SLIDER.min, max=RANGE_SLIDER.max aria-labelledby='range-min')
      input.cost__input(type="range", value=RANGE_SLIDER.valueB min=RANGE_SLIDER.min, max=RANGE_SLIDER.max aria-labelledby='range-max')
  button._show(type="button") Показать
